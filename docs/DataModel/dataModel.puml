    FIVE_CENTS(5, "5 Cent"),
    TEN_CENTS(10, "10 Cent"),
    TWENTY_CENTS(20, "20 Cent"),
    FIFTY_CENTS(50, "50 Cent"),
    ONE_EURO(100, "1 Euro"),
    TWO_EUROS(200, "2 Euro")
    --
    - centValue : int
    - displayName : String
    --
    + getCentValue() : int
    + getDisplayName() : String
    + {static} fromCentValue(int centValue) : CoinValue
}

